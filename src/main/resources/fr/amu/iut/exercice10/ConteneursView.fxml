<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.amu.iut.exercice10.ConteneursController">

    <!-- Barre de menu en haut -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="File"/>
                <Menu text="Edit"/>
                <Menu text="Help"/>
            </menus>
        </MenuBar>
    </top>

    <!-- Panneau gauche avec boutons -->
    <left>
        <HBox>
            <children>
                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Boutons :"/>
                        <Button text="Bouton 1" fx:id="btn1"/>
                        <Button text="Bouton 2" fx:id="btn2"/>
                        <Button text="Bouton 3" fx:id="btn3"/>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL"/>
            </children>
        </HBox>
    </left>

    <!-- Centre avec formulaire -->
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10" padding="20">
            <children>
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <children>
                        <Button text="Submit" onAction="#handleSubmit"/>
                        <Button text="Cancel" onAction="#handleCancel"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </center>

    <!-- Bas de page -->
    <bottom>
        <VBox alignment="CENTER">
            <children>
                <Separator prefWidth="600"/>
                <Label text="Ceci est un label de bas de page"/>
            </children>
            <padding>
                <Insets top="5" bottom="5"/>
            </padding>
        </VBox>
    </bottom>

</BorderPane>
